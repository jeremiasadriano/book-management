@model IEnumerable<BibliotecaNA.Models.Domain.Genero>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Genre/Add">Adicionar mais gêneros</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Gêneros</h3>

            <table class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>
                                <a class="btn btn-success" href="/Genero/Update?id=@item.Id"><i class="bi bi-pen"></i>
                                    Editar</a> |
                                <a class="btn btn-danger"
                                    onclick="return window.confirm('Tem a certeza de deseja remover este gênero?')"
                                    href="/Genero/Delete?id=@item.Id"><i class="bi bi-trash"></i> Remover</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
